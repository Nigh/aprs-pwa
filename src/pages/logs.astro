---
import Layout from "../layouts/Layout.astro"
import LogsViewer from "../components/LogsViewer.svelte"
---

<Layout title="APRS-TX Logs">
    <main class="flex min-h-screen flex-col bg-base-200 p-4">
        <div class="w-full max-w-sm mx-auto">
            <div class="mb-6">
                <a href="/" class="btn btn-ghost btn-sm mb-4">‚Üê Back to Transmitter</a>
                <h1 class="text-4xl font-bold mb-2 text-primary">APRS-TX Logs</h1>
                <p class="text-lg text-base-content opacity-70">Operation history and status updates</p>
            </div>
            <LogsViewer client:load />
        </div>
    </main>
</Layout>
