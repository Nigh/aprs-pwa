---
import Layout from "../layouts/Layout.astro"
import APRSTransmitter from "../components/APRSTransmitter.svelte"
---

<Layout title="APRS-TX Transmitter">
    <main
        class="flex min-h-screen flex-col items-center justify-center bg-base-200 p-4"
    >
        <div class="w-full max-w-2xl">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold mb-2 text-primary">APRS-TX</h1>
                <p class="text-lg text-base-content opacity-70">Automatic Packet Reporting System Transmitter</p>
            </div>
            <APRSTransmitter client:load />
        </div>
    </main>
</Layout>
